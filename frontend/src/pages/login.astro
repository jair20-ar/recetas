<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <style>
      :root {
        --bg-color: linear-gradient(135deg, rgba(15, 32, 39, 0.8), rgba(32, 58, 67, 0.8), rgba(44, 83, 100, 0.8));
        --text-color: #ffffff;
        --form-bg: rgba(255, 255, 255, 0.2);
        --form-border: rgba(255, 255, 255, 0.3);
        --form-shadow: rgba(0, 0, 0, 0.4);
        --input-bg: #ffffff;
        --input-border: rgba(0, 0, 0, 0.2);
        --input-focus-border: rgba(32, 58, 67, 0.8);
        --button-bg: linear-gradient(90deg, #9c0720, #610000); /* Mismos colores que el archivo de referencia */
        --button-hover-bg: linear-gradient(90deg, #610000, #9c0720); /* Mismos colores que el archivo de referencia */
        --button-shadow: rgba(156, 7, 32, 0.5); /* Sombra del archivo de referencia */
        --link-color: #ffffff;
        --link-hover-color: #f1666d;
      }

      body {
        margin: 0;
        font-family: 'Arial', sans-serif;
        background: var(--bg-color), url('/src/assets/img/sano.jpg');
        background-size: cover;
        background-position: center;
        background-blend-mode: overlay;
        color: var(--text-color);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
        text-align: center;
        position: relative;
      }

      .background-design {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--bg-color);
        z-index: 0;
        opacity: 0.9;
      }

      h1 {
        font-size: 2.8rem;
        margin-bottom: 1.5rem;
        color: var(--text-color);
        text-shadow: 0 3px 10px rgba(0, 0, 0, 0.5);
      }

      form {
        background: var(--form-bg);
        border: 1px solid var(--form-border);
        border-radius: 20px;
        box-shadow: 0 8px 20px var(--form-shadow);
        padding: 2.5rem 1.5rem;
        width: 90%;
        max-width: 400px;
        backdrop-filter: blur(15px);
        text-align: center;
        position: relative;
        z-index: 1;
      }

      input {
        width: 100%;
        margin: 0.8rem 0;
        padding: 1rem;
        border: 1px solid var(--input-border);
        border-radius: 25px;
        background: var(--input-bg);
        color: #000000;
        font-size: 1rem;
        transition: border 0.3s, box-shadow 0.3s;
      }

      input:focus {
        outline: none;
        border-color: var(--input-focus-border);
        box-shadow: 0 0 15px var(--input-focus-border);
      }

      button {
        margin-top: 1.5rem;
        padding: 1rem;
        background: var(--button-bg);
        color: var(--text-color);
        border: none;
        border-radius: 25px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background 0.3s, box-shadow 0.3s, transform 0.2s;
        width: 100%;
        box-shadow: 0 5px 15px var(--button-shadow);
      }

      button:hover {
        background: var(--button-hover-bg);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px var(--button-shadow);
      }

      .register-link {
        margin-top: 1.5rem;
        font-size: 1rem;
        color: var(--link-color);
      }

      .register-link a {
        text-decoration: none;
        color: var(--link-color);
        font-weight: bold;
        transition: color 0.3s;
      }

      .register-link a:hover {
        color: var(--link-hover-color);
      }

      .error {
        color: #ff4d4d;
        margin-top: 1rem;
        font-size: 0.9rem;
        font-style: italic;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: scale(0.9);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.getElementById("login-form");
        const errorContainer = document.getElementById("error-message");

        form.addEventListener("submit", async (event) => {
          event.preventDefault();

          const email = document.getElementById("email").value;
          const password = document.getElementById("password").value;

          try {
            const response = await fetch("http://localhost:4322/api/users/login", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ email, password }),
            });

            const data = await response.json();

            if (response.ok) {
              localStorage.setItem("token", data.token);
              window.location.href = "/home";
            } else {
              errorContainer.textContent = data.error || "Error al iniciar sesión.";
            }
          } catch (error) {
            console.error("Error al conectar con el servidor:", error);
            errorContainer.textContent = "Error de conexión al servidor.";
          }
        });
      });
    </script>
  </head>
  <body>
    <div class="background-design"></div>
    <form id="login-form">
      <h1>Iniciar Sesión</h1>
      <input type="email" id="email" placeholder="Correo Electrónico" required />
      <input type="password" id="password" placeholder="Contraseña" required />
      <button type="submit">Iniciar Sesión</button>
      <div class="error" id="error-message"></div>
      <div class="register-link">
        ¿Deseas registrarte? <a href="/register">Haz clic aquí</a>.
      </div>
    </form>
  </body>
</html>